{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1500,
  "height": 750,
  "title": "Payments Count by State",
  "projection": {"type": "mercator"},
  
  
  "params": [{
    "name": "state_selection",
    "bind": {
      "input": "select",
      "options": [
        null,
        "Australian Capital Territory",
        "New South Wales",
        "Northern Territory",
        "Queensland",
        "South Australia",
        "Tasmania",
        "Victoria",
        "Western Australia"
      ],
      "labels": [
        "Show All",
        "Australian Capital Territory",
        "New South Wales",
        "Northern Territory",
        "Queensland",
        "South Australia",
        "Tasmania",
        "Victoria",
        "Western Australia"

      ],
      "name": "State Selection: "
    }
  }],
  
  "layer": [
    

    {
      "data": {
        "url": "map.json",
        "format": {"type": "topojson", "feature": "graticules"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "gray"}
    },
    
    {
      "data":{
        "url": "map.json",
            "format": {
              "type": "topojson",
              "feature": "data"
            }
      },
      "transform": [
        {"calculate": "'Data Not Selected in ' + datum.properties.shape1", "as": "note"}
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "gray"},
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    
    {
      "data":{
        "url": "map.json",
            "format": {
              "type": "topojson",
              "feature": "data"
            }
      },
      "transform": [
        {
          "filter": "state_selection == null || datum.AUState == state_selection"
        },
        {
          "lookup": "properties.shape1",
          "from":{
            "data":{
              "url": "PAYMENT.csv",
              "format":{
                "type": "csv"
              }
            },
            "key": "AUState",
            "fields": [
                "TotalPayments",
                "TopPayment",
                "SecondTopPayment",
                "ThirdTopPayment",
                "AUState"
                
            ]
          }
        }
      ],
      

      
      "mark": {"type": "geoshape", "stroke": "gray"},
      "encoding": {
        "opacity": {
          "value": 0.8
        },
        "color": {
          "field": "TotalPayments",
          "type": "quantitative",
          "title": "Total",
          "scale": {
            "type": "threshold",
            "domain": [1000000, 2500000, 4000000],
            "range": ["#ccece6", "#9adbb8", "#2b8cbe", "#2c5d9a"]
          }
        },
        "tooltip": [
          {"field": "properties.shape1", "type": "nominal", "title": "Country"},
          {"field": "TopPayment", "type": "nominal", "title": "Top 1"},
          {"field": "SecondTopPayment", "type": "nominal", "title": "Top 2"},
          {"field": "ThirdTopPayment", "type": "nominal", "title": "Top 3"},
          {"field": "TotalPayments", "type": "quantitative", "title": "Total Payments"}
        ]
      }
    },
    {
      "data": {
        "url": "CITIES.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {
          "filter": "state_selection == null || datum.admin_name == state_selection"
        }
      ],
      "encoding": {
          "longitude": {"field": "lng", "type": "quantitative"},
          "latitude": {"field": "lat", "type": "quantitative"}
          
        },
      "layer": [{
        "mark": {
          "type": "circle",
          "color": "#7a4a01",
          "size":50,
          "opacity": 1
        },
        "encoding":{
          "tooltip":[
            {"field": "city", "type": "nominal", "title": "City"},
            {"field": "population", "type": "quantitative", "title": "Population"}
          ]

        }
        }, {
          "mark": {
            "type": "text",
            "dy": -15,
            "fontSize": 14,
            "fontWeight": "bold"
          },
          "encoding": {
            "text": {"field": "city", "type": "nominal"},
            "tooltip":[
            {"field": "city", "type": "nominal", "title": "City"},
            {"field": "population", "type": "quantitative", "title": "Population"}
          ]
          }
      }
      
    ]
    }
  ]
}
